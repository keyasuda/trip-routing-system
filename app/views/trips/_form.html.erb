<%= form_with(model: trip, class: 'trip') do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= t("errors.template.header", model: Trip.model_name.human, count: trip.errors.count) %></h2>

      <ul>
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= form.button(class: 'btn float-right') do %>
      <span class="material-icons-outlined">done</span>
    <% end %>
  </div>
<% end %>

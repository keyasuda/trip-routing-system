<% content_for(:title) { "#{t('view.title.add', name: Waypoint.model_name.human)} - #{@day.name} - #{@trip.name}" } %>

<header class="navbar">
  <section class="navbar-section">
    <ul class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to 'TRS', '/' %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to @trip.name, @trip %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to @day.name, [@trip, @day] %>
      </li>
      <li class="breadcrumb-item">
        <%= t('view.title.add', name: Waypoint.model_name.human) %>
      </li>
    </ul>
  </section>
</header>

<%= render "form", trip: @trip, day: @day, waypoint: @waypoint %>

<%= form_with(model: [trip, day, waypoint], data: {controller: 'waypoints'}) do |form| %>
  <div data-waypoints-target="map" style="height: 400px"></div>

  <% if waypoint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(waypoint.errors.count, "error") %> prohibited this waypoint from being saved:</h2>

      <ul>
        <% waypoint.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.hidden_field :longitude, data: {waypoints_target: 'longitude'} %>
    <%= form.hidden_field :latitude, data: {waypoints_target: 'latitude'} %>
  </div>

  <div class="field">
    <%= form.label :stop_min %>
    <%= form.number_field :stop_min %>
  </div>

  <div class="field">
    <%= form.label :index %>
    <%= form.number_field :index %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

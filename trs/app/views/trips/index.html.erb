<header class="navbar">
  <section class="navbar-section">
    <ul class="breadcrumb">
      <li class="breadcrumb-item">
        TRS
      </li>
    </ul>
  </section>
</header>

<% if notice %>
  <div id="notice" class="toast" data-controller="toast" data-toast-target="autoclose">
    <%= notice %>
  </div>
<% end %>

<div class="container">
  <table class="table table-striped table-hover">
    <tr>
      <th></th>
      <th>初日</th>
      <th>最終日</th>
    </tr>

    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.name, trip %></td>
        <td><%= trip.days.first.start_at.strftime('%Y-%m-%d') if trip.days.first&.start_at %></td>
        <td><%= trip.days.last.start_at.strftime('%Y-%m-%d') if trip.days.last&.start_at %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to new_trip_path, class: 'btn btn-link' do %>
    <span class="material-icons-outlined">add</span>
  <% end %>
</div>

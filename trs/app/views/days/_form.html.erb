<%= form_with(model: [trip, day], class: 'day') do |form| %>
  <% if day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
        <% day.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :start_at, class: 'form-label' %>
    <%= form.datetime_select :start_at, {}, {class: 'form-select'} %>
  </div>

  <div class="actions">
    <%= form.button(class: 'btn float-right') do %>
      <span class="material-icons-outlined">done</span>
    <% end %>
  </div>
<% end %>
